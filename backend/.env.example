# ATHENA Backend — Environment Variables
# Copy this file to .env and fill in real values.

# ── App ────────────────────────────────────────────────────────────────────────
DEBUG=true
APP_VERSION=1.0.0

# ── Stub / demo mode ───────────────────────────────────────────────────────────
# Set STUB_MODE=true to run the full pipeline without real Deploy.AI credentials.
# The pipeline will use realistic deterministic demo data instead of real API calls.
# Auto-enabled when DEPLOY_AI_CLIENT_ID is empty string.
STUB_MODE=false

# ── Deploy.AI / Complete.dev credentials ──────────────────────────────────────
DEPLOY_AI_AUTH_URL=https://api-auth.dev.deploy.ai/oauth2/token
DEPLOY_AI_API_URL=https://core-api.dev.deploy.ai
DEPLOY_AI_CLIENT_ID=<your_client_id>
DEPLOY_AI_CLIENT_SECRET=<your_client_secret>
DEPLOY_AI_ORG_ID=<your_org_id>

# ── Agent IDs (fill after publishing agents in Agent Builder) ─────────────────
SCOUT_AGENT_ID=<scout_agent_id_from_agent_builder>
STRATEGY_AGENT_ID=<strategy_agent_id_from_agent_builder>

# ── Reports output directory ──────────────────────────────────────────────────
REPORTS_DIR=./reports

# ── CORS (comma-separated list of allowed origins) ────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
